      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "spanNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "Total Requests",
            "scaleDistribution": {
              "type": "linear"
            },
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["mean", "max"]
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Hook Duration (by hook type)",
      "description": "Average hook execution time per hook type. Target: <500ms (SLA). High values block Claude's workflow. Check Qdrant latency if SessionStart >3s.",
      "gridPos": {
        "x": 0,
        "y": 18,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (hook) (bmad_hook_duration_seconds_sum{hook!=\"\"}) / sum by (hook) (bmad_hook_duration_seconds_count{hook!=\"\"})",
          "refId": "A",
          "legendFormat": "{{hook}} (avg)"
        },
        {
          "expr": "max by (hook) (bmad_hook_duration_seconds_sum{hook!=\"\"} / bmad_hook_duration_seconds_count{hook!=\"\"})",
          "refId": "B",
          "legendFormat": "{{hook}} (last)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "noValue": "No data",
