    {
      "id": 5,
      "type": "timeseries",
      "title": "Memory Capture & Retrieval Activity",
      "description": "Cumulative memory captures (PostToolUse) and retrievals (SessionStart, triggers) over time. Shows memory system engagement. Upward trends = active usage.",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (hook_type) (bmad_memory_captures_total)",
          "refId": "A",
          "legendFormat": "Captures - {{hook_type}}"
        },
        {
          "expr": "sum by (collection) (bmad_memory_retrievals_total)",
          "refId": "B",
          "legendFormat": "Retrievals - {{collection}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["mean", "max", "last"]
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
