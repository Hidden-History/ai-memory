      "targets": [
        {
          "expr": "sum(rate(aimemory_dedup_events_total{action=\"skipped_duplicate\", project=~\"$project\"}[5m])) / (sum(rate(aimemory_dedup_events_total{project=~\"$project\"}[5m])) > 0) * 100 or vector(0)",
