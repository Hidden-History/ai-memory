    {
      "id": 5,
      "type": "timeseries",
      "title": "Error Rate by Component",
      "description": "**Metric:** aimemory_failure_events_total\n**Components:** qdrant, embedding, queue, hook",
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(changes(aimemory_failure_events_created{project=~\"$project\"}[$__rate_interval])) by (component)",
          "refId": "A",
          "legendFormat": "{{component}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          },
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "#73BF69"
              },
              {
                "value": 0.01,
                "color": "#FADE2A"
              },
              {
                "value": 0.1,
                "color": "#F2495C"
              }
            ]
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "mean",
            "sum",
            "lastNotNull"
          ]
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 6,
      "type": "table",
      "title": "Qdrant Collection Stats",
      "description": "Collection name, vector count, and status",
      "gridPos": {
        "x": 0,
        "y": 13,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "aimemory_collection_size{project=\"all\"}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "#73BF69"
              },
              {
                "value": 10000,
                "color": "#FADE2A"
              },
              {
                "value": 20000,
                "color": "#F2495C"
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Time"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Vector Count"
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "__name__"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "instance"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "job"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "project"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Vector Count",
            "desc": true
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "project": true
            },
            "renameByName": {
              "collection": "Collection",
              "Value": "Vector Count"
            },
            "indexByName": {
              "collection": 0,
              "Value": 1
            }
          }
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Embedding Service Latency",
      "description": "**Metrics:** aimemory_embedding_batch_duration_seconds, aimemory_embedding_realtime_duration_seconds\n**Percentiles:** p50, p95, p99",
      "gridPos": {
        "x": 12,
        "y": 13,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(aimemory_embedding_batch_duration_seconds_bucket) by (le))",
          "refId": "A",
          "legendFormat": "Batch p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(aimemory_embedding_batch_duration_seconds_bucket) by (le))",
          "refId": "B",
          "legendFormat": "Batch p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(aimemory_embedding_batch_duration_seconds_bucket) by (le))",
          "refId": "C",
          "legendFormat": "Batch p99"
        },
        {
          "expr": "histogram_quantile(0.50, sum(aimemory_embedding_realtime_duration_seconds_bucket) by (le))",
          "refId": "D",
          "legendFormat": "Realtime p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(aimemory_embedding_realtime_duration_seconds_bucket) by (le))",
          "refId": "E",
          "legendFormat": "Realtime p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(aimemory_embedding_realtime_duration_seconds_bucket) by (le))",
          "refId": "F",
          "legendFormat": "Realtime p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
