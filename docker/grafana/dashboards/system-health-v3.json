    {
      "id": 1,
      "type": "stat",
      "title": "Qdrant",
      "description": "Qdrant vector database status",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "up{job=\"qdrant\"} or on() vector(0)",
          "refId": "A",
          "legendFormat": "Qdrant"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "noValue": "DOWN",
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "#F2495C"
                },
                "1": {
                  "text": "UP",
                  "color": "#73BF69"
                }
              }
            }
          ],
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "#F2495C"
              },
              {
                "value": 1,
                "color": "#73BF69"
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        },
        "textMode": "value",
        "colorMode": "background",
