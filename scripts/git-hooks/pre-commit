#!/usr/bin/env bash
# ==============================================================================
# Pre-commit hook for ai-memory
# Prevents cross-contamination from pov-oversight-agent repo and workspace files
#
# Activation: git config core.hooksPath scripts/git-hooks
# Bypass:     git commit --no-verify -m "message"
# ==============================================================================
set -euo pipefail

RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m'

ERRORS=0

# Get list of staged files (added, copied, modified, renamed)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo "--- ai-memory pre-commit checks ---"

# CHECK 1: No files from pov-oversight-agent's unique directories
POV_DIRS="^(pov/)"
VIOLATIONS=$(echo "$STAGED_FILES" | grep -E "$POV_DIRS" || true)
if [ -n "$VIOLATIONS" ]; then
    echo -e "${RED}BLOCKED: Staged files match pov-oversight-agent directory patterns:${NC}"
    echo "$VIOLATIONS"
    echo "The pov/ directory belongs to pov-oversight-agent, not ai-memory."
    ERRORS=$((ERRORS + 1))
fi

# CHECK 2: No pov-oversight-agent-specific root files
POV_FILES="^(install-windows\.bat|pov-parzival\.customize\.yaml|ESCALATION-ADOPTION-GUIDE\.md|IMPLEMENTATION-PLAN-SUBAGENT-ENHANCEMENTS\.md|INSTALL-GUIDE\.md)$"
VIOLATIONS=$(echo "$STAGED_FILES" | grep -E "$POV_FILES" || true)
if [ -n "$VIOLATIONS" ]; then
    echo -e "${RED}BLOCKED: Staged files match pov-oversight-agent-specific filenames:${NC}"
    echo "$VIOLATIONS"
    ERRORS=$((ERRORS + 1))
fi

# CHECK 3: No absolute workspace paths in file content
# Exclude files that legitimately use these patterns as search strings
EXCLUDE_FROM_PATH_CHECK="scripts/git-hooks/pre-commit|\.github/workflows/"
for f in $STAGED_FILES; do
    if echo "$f" | grep -qE "$EXCLUDE_FROM_PATH_CHECK"; then
        continue
    fi
    # Only check text files, skip binary
    if file "$f" 2>/dev/null | grep -q "text"; then
        if git show ":$f" 2>/dev/null | grep -nE '/mnt/e/projects/|/dev-multi-agent/' > /dev/null 2>&1; then
            echo -e "${RED}BLOCKED: File '$f' contains absolute workspace path:${NC}"
            git show ":$f" | grep -nE '/mnt/e/projects/|/dev-multi-agent/' | head -5
            ERRORS=$((ERRORS + 1))
        fi
    fi
done

# CHECK 4: No workspace-only directory names in paths
WORKSPACE_DIRS="^(oversight/|_bmad/|_bmad-output/)"
VIOLATIONS=$(echo "$STAGED_FILES" | grep -E "$WORKSPACE_DIRS" || true)
if [ -n "$VIOLATIONS" ]; then
    echo -e "${RED}BLOCKED: Staged files from workspace-only directories:${NC}"
    echo "$VIOLATIONS"
    echo "These directories are workspace-only and should never be committed."
    ERRORS=$((ERRORS + 1))
fi

# CHECK 5: No POV template paths
POV_TEMPLATE_PATHS="templates/oversight/"
VIOLATIONS=$(echo "$STAGED_FILES" | grep "$POV_TEMPLATE_PATHS" || true)
if [ -n "$VIOLATIONS" ]; then
    echo -e "${RED}BLOCKED: Staged files match pov-oversight-agent template paths:${NC}"
    echo "$VIOLATIONS"
    ERRORS=$((ERRORS + 1))
fi

# RESULTS
if [ $ERRORS -gt 0 ]; then
    echo ""
    echo -e "${RED}Pre-commit check FAILED with $ERRORS error(s).${NC}"
    echo "This likely means files from the wrong repo or workspace were staged."
    echo ""
    echo "Fix: git reset HEAD <file>  (unstage wrong files)"
    echo "Bypass: git commit --no-verify  (CI will still catch issues)"
    echo "Verify: git remote -v  (confirm you're in ai-memory)"
    exit 1
fi

echo -e "${GREEN}All pre-commit checks passed.${NC}"
exit 0
